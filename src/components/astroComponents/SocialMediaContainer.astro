---
import InstagramIcon from "../icons/InstagramIcon.astro";
import XIcon from "../icons/XIcon.astro";
import GithubIcon from "../icons/GithubIcon.astro";
import LinkdinIcon from "../icons/LinkdinIcon.astro";
import IconLayout from "../icons/IconLayout.astro";
---

<div
  class="hidden md:flex flex-col justify-end gap-6 p-2 pr-3 fixed left-2 md:left-8 bottom-[2rem] md:bottom-10 border-dashed border border-transparent border-r-white/20 h-[100%] md:h-[82%] bg-black"
>
  <IconLayout>
    <span
      class="cursor-pointer text-2xl group-hover:animate-none transition-all group-hover:scale-110"
    >
      <GithubIcon />
    </span>
    <p
      slot="label"
      class="text-[0.2rem] absolute right-0 opacity-0 group-hover:opacity-100 group-hover:text-white group-hover:text-sm group-hover:translate-x-[4.5rem] duration-700 cursor-pointer border-[1px] border-cyan-400 bg-cyan-50/20 px-2 py-1 rounded-lg backdrop-blur-md"
    >
      Github
    </p>
  </IconLayout>

  <IconLayout label="Linkedin">
    <span
      class="cursor-pointer text-2xl group-hover:animate-none transition-all group-hover:scale-110"
    >
      <LinkdinIcon />
    </span>
    <p
      slot="label"
      class="text-[0.2rem] absolute right-0 opacity-0 group-hover:opacity-100 group-hover:text-white group-hover:text-sm group-hover:translate-x-[5.2rem] duration-700 cursor-pointer border-[1px] border-cyan-400 bg-cyan-50/20 px-2 py-1 rounded-lg backdrop-blur-md"
    >
      Linkedin
    </p>
  </IconLayout>
  <IconLayout>
    <span
      class="cursor-pointer text-2xl group-hover:animate-none transition-all group-hover:scale-110"
    >
      <XIcon />
    </span>
    <p
      slot="label"
      class="text-[0.2rem] absolute right-0 opacity-0 group-hover:opacity-100 group-hover:text-white group-hover:text-sm group-hover:translate-x-[4.8rem] duration-700 cursor-pointer border-[1px] border-cyan-400 bg-cyan-50/20 px-2 py-1 rounded-lg backdrop-blur-md"
    >
      Twitter
    </p>
  </IconLayout>
  <IconLayout label="Instagram">
    <span
      class="cursor-pointer text-2xl group-hover:animate-none transition-all group-hover:scale-110"
    >
      <InstagramIcon />
    </span>
    <p
      slot="label"
      class="text-[0.2rem] absolute right-0 opacity-0 group-hover:opacity-100 group-hover:text-white group-hover:text-sm group-hover:translate-x-[6rem] duration-700 cursor-pointer border-[1px] border-cyan-400 bg-cyan-50/20 px-2 py-1 rounded-lg backdrop-blur-md"
    >
      Instagram
    </p>
  </IconLayout>
</div>
