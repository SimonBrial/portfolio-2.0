---
import TitleLayout from "../../layouts/TitleLayout.astro";
import CellIcon from "../icons/CellIcon.astro";
import CSSIcon from "../icons/CSSIcon.astro";
import HTMLIcon from "../icons/HTMLIcon.astro";
import JSIcon from "../icons/JSIcon.astro";
import MantineIcon from "../icons/MantineIcon.astro";
import NextIcon from "../icons/NextIcon.astro";
import PCIcon from "../icons/PCIcon.astro";
import ReactIcon from "../icons/ReactIcon.astro";
import SassIcon from "../icons/SassIcon.astro";
import TailwindIcon from "../icons/TailwindIcon.astro";
import TSIcon from "../icons/TSIcon.astro";
import ZustandIcon from "../icons/ZustandIcon.astro";
import CardProject from "./projects/CardProject.astro";
import OtherProjectsCard from "./projects/OtherProjectsCard.astro";
import TechContainer from "./projects/TechContainer.astro";
---

<section id="projects" class="h-full py-[6rem]">
  <TitleLayout title="Projects I have been working on..." />
  <div class="p-5 flex flex-col gap-6">
    <CardProject
      img="img/so2-img.png"
      title="CRM Social Media App"
      projectUrl="https://servioriente-app.vercel.app/"
      github={"https://github.com/SimonBrial/Servioriente_app"}
      figma=""
    >
      <p slot="description">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Blanditiis
        assumenda repellat delectus aspernatur quibusdam similique, voluptates
        perspiciatis, amet optio sed natus quaerat architecto aliquid nulla
        eius. Illum animi inventore distinctio?
      </p>
      <div class="flex gap-2 items-center flex-wrap mt-2" slot="technologies">
        <TechContainer techLabel="Next.js">
          <NextIcon />
        </TechContainer>
        <TechContainer techLabel="Mantine UI">
          <MantineIcon />
        </TechContainer>
        <TechContainer techLabel="Zustand">
          <ZustandIcon />
        </TechContainer>
        <TechContainer techLabel="TypeScript">
          <TSIcon />
        </TechContainer>
        <TechContainer techLabel="CSS">
          <CSSIcon />
        </TechContainer>
      </div>
    </CardProject>
    <CardProject
      img="img/shaddai_02.png"
      title="Shaddai App"
      projectUrl="https://shaddai-app-m1pz.vercel.app/"
      github={"https://github.com/SimonBrial/shaddai_app"}
      figma=""
    >
      <p slot="description">
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Blanditiis
        assumenda repellat delectus aspernatur quibusdam similique, voluptates
        perspiciatis, amet optio sed natus quaerat architecto aliquid nulla
        eius. Illum animi inventore distinctio?
      </p>
      <div class="flex gap-2 items-center flex-wrap mt-2" slot="technologies">
        <TechContainer techLabel="React">
          <ReactIcon />
        </TechContainer>
        <TechContainer techLabel="Tailwind">
          <TailwindIcon />
        </TechContainer>
        <TechContainer techLabel="Zustand">
          <ZustandIcon />
        </TechContainer>
        <TechContainer techLabel="TypeScript">
          <TSIcon />
        </TechContainer>
      </div>
    </CardProject>
  </div>

  <div class="py-10">
    <TitleLayout title="Other projects I have developed..." />
    <div class="md:p-5 flex flex-col md:grid grid-cols-1 md:grid-cols-3 gap-4">
      <OtherProjectsCard
        title="Dnd kit Example"
        figma=""
        github="https://github.com/SimonBrial/dndkit-guide"
        projectUrl="https://dnd-kit-example-gamma.vercel.app/"
      >
        <span slot="responsive" class="flex items-center gap-2">
          <PCIcon />
        </span>
        <p slot="description" class="py-1">
          Project created with the objective of practicing with DnD kit library,
          for a project where I had to implement this library.
        </p>
        <div
          class="flex gap-2 items-center flex-wrap mt-2 pt-0 p-2"
          slot="technologies"
        >
          <TechContainer techLabel="React">
            <ReactIcon />
          </TechContainer>
          <TechContainer techLabel="Tailwind">
            <TailwindIcon />
          </TechContainer>
          <TechContainer techLabel="TypeScript">
            <TSIcon />
          </TechContainer>
        </div>
      </OtherProjectsCard>
      <OtherProjectsCard
        title="Psy Fake Store"
        figma=""
        github="https://github.com/SimonBrial/fake-commerce"
        projectUrl="https://silly-croquembouche-f5a503.netlify.app/"
      >
        <span slot="responsive" class="flex items-center gap-2">
          <PCIcon /><CellIcon />
        </span>
        <p slot="description" class="py-1">
          Project created with the objective of practicing the manipulation of
          global context and typescript.
